/****************************************************************************
                    Find the Largest element in an array
*******************************************************************************/
public class Main
{
	public static void main(String[] args) {
		int arr[] = {2,5,1,3,0};
		int max = arr[0];
		int i=0;
		for(i=1;i<arr.length;i++)
		{
		    if(max<arr[i])
		    max = arr[i];
		}
		System.out.println("Maximum Element of Array is "+max);
		
	}
}
